<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/list_item_artile_vertical_margin"
    card_view:cardCornerRadius="@dimen/card_radius"
    card_view:cardElevation="10dp">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/list_item_article_space">

        <TextView
            android:id="@+id/tvNoMediaArticleTitle"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/primary_text"
            tools:text="A Value Is Assigned to Tom Bradyâ€™s Missing Jersey: $500,000"
            />

        <TextView
            android:id="@+id/tvNoMediaArticleMoniker"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/article_moniker"
            android:padding="@dimen/list_item_artile_vertical_margin"
            android:background="@color/theme_primary_dark"
            android:textColor = "@color/white"
            android:ellipsize="end"
            android:maxLines="1"
            android:layout_margin="@dimen/list_item_artile_vertical_margin"/>

        <TextView
            android:id="@+id/tvNoMediaArticleSnippet"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textColor="@color/secondary_text"
            tools:text="The Houston police say the value of the Super Bowl jersey was determined by the complainant, who is listed as the Patriots quarterback...."
            />
    </LinearLayout>
</android.support.v7.widget.CardView>